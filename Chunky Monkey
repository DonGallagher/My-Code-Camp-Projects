function chunkArrayInGroups(arr, size) {
  // Break it up.
  
  count=0;
  var newArr=[];
  
  while (count < arr.length) { 
   newArr.push(arr.slice(count,count+size));
   console.log (arr.slice(count,count+size));
    count=count+size;
    console.log (count);
  }
  
  
  return newArr;
}

chunkArrayInGroups(["a", "b", "c", "d"], 2);
